{
  "manifest_version": 3,
  "version": "1.9",
  "name": "Git Patch Viewer",
  "short_name": "GPV",
  "description": "Show Git patch in a comprehensive way.",
  "permissions": [
    "activeTab", "scripting", "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*",
    "file://*/*"
  ],
    "icons": {
        "48":"patch-ext-48x48.png",
        "128":"patch-ext-128x128.png"
    },
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_icon": "patch-ext-48x48.png"
  }
}
